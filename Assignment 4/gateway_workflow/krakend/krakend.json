{
  "$schema": "https://www.krakend.io/schema/v3.json",
  "version": 3,
  "name": "KrakenD - API Gateway",
  "timeout": "3000ms",
  "cache_ttl": "300s",
  "output_encoding": "json",
  "port": 8081,
  "endpoints": [
    {
      "endpoint": "/view_auction",
      "method": "POST",
      "output_encoding": "json",
         "input_headers": [
            "Authorization"
      ],
      "backend": [
        {
          "url_pattern": "/v1/projects/ada-search-service/locations/us-central1/workflows/related-auctions/executions",
          "encoding": "json",
          "method": "POST",
          "host": [
            "https://workflowexecutions.googleapis.com/"
          ],
          "disable_host_sanitize": false
        }
      ]
    },
    {
      "endpoint": "/view_auction/{eid}",
      "method": "GET",
      "output_encoding": "json",
        "input_headers": [
          "Authorization"
        ],
      "backend": [
        {
          "url_pattern": "/v1/projects/ada-search-service/locations/us-central1/workflows/related-auctions/executions/{eid}",
          "encoding": "json",
          "method": "GET",
          "host": [
            "https://workflowexecutions.googleapis.com/"
          ],
          "disable_host_sanitize": false,
          "allow": [
        "result"
      ]
        }
      ]
    },
    {
      "endpoint": "/place_bid",
      "method": "POST",
      "output_encoding": "json",
         "input_headers": [
            "Authorization"
      ],
      "backend": [
        {
          "url_pattern": "/v1/projects/ada-search-service/locations/us-central1/workflows/auction-bid-message/executions",
          "encoding": "json",
          "method": "POST",
          "host": [
            "https://workflowexecutions.googleapis.com/"
          ],
          "disable_host_sanitize": false
        }
      ]
    },
    {
      "endpoint": "/place_bid/{eid}",
      "method": "GET",
      "output_encoding": "json",
        "input_headers": [
          "Authorization"
        ],
      "backend": [
        {
          "url_pattern": "/v1/projects/aada-search-service/locations/us-central1/workflows/auction-bid-message/executions/{eid}",
          "encoding": "json",
          "method": "GET",
          "host": [
            "https://workflowexecutions.googleapis.com/"
          ],
          "disable_host_sanitize": false,
          "allow": [
        "result"
      ]
        }
      ]
    },
    {
      "endpoint": "/auctions/",
      "method": "POST",
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/v1.0/auctions/",
          "encoding": "json",
          "method": "POST",
          "host": [
            "http://auction_service_ct:5000/"
          ],
          "disable_host_sanitize": false,
          "mapping":{
            "auction_id":"auction"
          }
        }
      ]
    },
    {
      "endpoint": "/auctions/{id}",
      "method": "DELETE",
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/v1.0/auctions/{id}",
          "encoding": "json",
          "method": "DELETE",
          "host": [
            "http://auction_service_ct:5000/"
          ],
          "disable_host_sanitize": false
        }
      ]
    },
    {
      "endpoint": "/bids/{id}",
      "method": "DELETE",
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/v1.0/bids/{id}",
          "encoding": "json",
          "method": "DELETE",
          "host": [
            "http://auction_service_ct:5000/"
          ],
          "disable_host_sanitize": false
        }
      ]
    },
    {
      "endpoint": "/bids/{id}",
      "method": "GET",
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/v1.0/bids/{id}",
          "encoding": "json",
          "method": "GET",
          "host": [
            "http://auction_service_ct:5000/"
          ],
          "disable_host_sanitize": false
        }
      ]
    },
    {
      "endpoint": "/message/{id}",
      "method": "GET",
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/v1.0/messages/{id}",
          "encoding": "json",
          "method": "GET",
          "host": [
            "http://message_service_ct:5000/"
          ],
          "disable_host_sanitize": false
        }
      ]
    }
  ]
}
